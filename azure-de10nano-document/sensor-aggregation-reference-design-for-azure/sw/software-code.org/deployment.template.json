{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "modules": {
          "RfsModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.RfsModule}",
              "createOptions": {
                "HostConfig": {
                  "Privileged": true,
                  "Binds": [
                    "/lib/firmware:/lib/firmware",
                    "/sys/kernel/config:/sys/kernel/config"
                  ]
                },
                "Mounts": [
                  {
                    "Type": "bind",
                    "Source": "/lib/firmware",
                    "Destination": "/lib/firmware",
                    "Mode": "",
                    "RW": true,
                    "Propagation": "rprivate"
                  },
                  {
                    "Type": "bind",
                    "Source": "/sys/kernel/config",
                    "Destination": "/sys/kernel/config",
                    "Mode": "",
                    "RW": true,
                    "Propagation": "rprivate"
                  }
                ]
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "RfsModuleToIoTHub": "FROM /messages/modules/RfsModule/* INTO $upstream"
        }
      }
    },
    "RfsModule":{
      "properties.desired": {
      }
    }
  }
}